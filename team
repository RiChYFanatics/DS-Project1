package com.hsrw.pds_practice01;

public class Team {
    public static Player p1;
    public static Player p2;

    public Team (Player p1, Player p2) {
        this.p1 = p1;
        this.p2 = p2;
    }
    public static void playersReady() throws InterruptedException {
        while (p1.ready && p2.ready){
            Thread.sleep(1000);
            System.out.println(p1.ready);
            System.out.println(p2.ready+" 2");
        }
    }
}
